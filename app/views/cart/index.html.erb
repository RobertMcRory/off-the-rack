<h1>Your Cart</h1>
<% if @cart.empty? %>
    <p>Your cart is empty.</p>
<% end %>

<% total=0 %>

<table class="cart">
    <tr>
        <td class="legend"></td>
        <td class="legend">Product</td>
        <td class="legend">Option</td>
        <td class="legend">Price</td>
        <td class="legend">Quantity</td>
        <td class="legend">Total</td>
    </tr>
    
    <% @cart.each do |id, quantity | %>
        <% product = Product.find_by_id(id) %>
        <tr>
            <td>
                <div class="image">
                    <%= link_to (image_tag product.image_url, :style => "height:50px"), product %>
                </div>
            </td>
            <td class="title"><%= link_to product.title, product %></td>
            <td><a href="/cart/remove/<%= product.id %>">Remove from Cart</a></td>
            <td class="price"><%= number_to_currency(product.price) %></td>
            <td class="quantity"><%= quantity %></td>
            <td class="price"><%= number_to_currency(quantity * product.price, :unit => "â‚¬") %></td>
            <tr>
                <% total += quantity * product.price %>
                <% end %>
            </tr>
            
            <td colspan="4">
                <div class="total">Total:</div>
            </td>
            <td>
                <div class="price"><% number_to_currency(total, :unit => "Eur") %></div>
            </td>
        </tr>
</table>
<p>
    <%= link_to 'Clear Cart', :controller => "cart", :action => "clearCart" %>
    <%= link_to 'Continue Shopping', :controller => :products %>
</p>
